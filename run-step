#!/bin/bash
# Simple wrapper to run one_step.py with proper environment

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR"

# Use venv python if available, otherwise use system python3
if [ -f ".venv/bin/python" ]; then
    exec .venv/bin/python runner/one_step.py "$@"
else
    exec python3 runner/one_step.py "$@"
fi
