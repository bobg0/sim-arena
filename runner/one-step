#!/bin/bash
# Wrapper script for runner/one_step.py that uses the virtual environment

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
cd "$SCRIPT_DIR"

# Use virtual environment Python if it exists, otherwise use system python3
if [ -f ".venv/bin/python" ]; then
    PYTHON=".venv/bin/python"
else
    PYTHON="python3"
fi

# Run with PYTHONPATH set
PYTHONPATH=. "$PYTHON" runner/one_step.py "$@"
